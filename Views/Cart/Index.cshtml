<div class="container">
    <h1>Shopping Cart</h1>
    <table class="table table-striped table-hover table-bordered">
        <tbody>
            <tr>
                <th>Item</th>
                <th>QTY</th>
                <th>Unit Price</th>
                <th>Total Price</th>
            </tr>
            @{
                double bookTotal = 0;
                double total = 0;
            }
            @foreach(var item in ViewBag.cart)
            {
                <tr>
                <td>@item.Book.Title</td>
                <td><input type="number" class="form-control" id="inputQuantity" min="1" value="@item.Quantity"></td>
                <td id="bookPrice">@item.Book.Price</td>
                @{bookTotal += (item.Book.Price * item.Quantity);}
                <td id="cart-unit-total">@bookTotal</td>
                </tr>
                bookTotal = 0;
                total += (item.Book.Price * item.Quantity);
            }
            <tr>
                <th colspan="3"><span class="pull-right">Total</span></th>
                <th>@total</th>
            </tr>
            <tr>
                <td><a href="#" class="btn btn-primary">Continue Shopping</a></td>
                <td colspan="3"><a href="#" class="pull-right btn btn-success">Checkout</a></td>
            </tr>
        </tbody>
    </table>
<div>
    <div class="cart-page">
        <h3>Cart Info</h3>
        <table class="cart-table">
            <tr>
                <th>Action</th>
                <th>Photo</th>
                <th>Title</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
            @{double nexttotal = 0;}
            @foreach (var item in ViewBag.cart)
            {
            <tr>
            <td><button><a asp-controller="cart" asp-action="remove" asp-route-id="@item.Book.Id">Remove</a></button></td>
            <td><img src="@item.Book.Photo" width="50"></td>
            <td>@item.Book.Title</td>
            <td>@item.Book.Price</td>
            <td>@item.Quantity</td>
            </tr>
                nexttotal += item.Book.Price;
            }
        </table>
        <h2 id="price-total">Total: <b>@nexttotal</b></h2>
        <button><a asp-controller="Account" asp-action="Checkout" method="GET">Go to checkout</a></button>
    </div>
</div>