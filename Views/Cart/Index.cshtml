<div class="container">
    <h1>Shopping Cart</h1>
    <table class="table table-striped table-hover table-bordered">
        <tbody>
            <tr>
                <th>Item</th>
                <th>QTY</th>
                <th>Unit Price</th>
                <th>Total Price</th>
            </tr>
            @foreach(var item in ViewBag.cart)
            {
                <tr>
                <td>@item.Book.Title</td>
                <td><input type="number" class="form-control" id="exampleInputQuantity" value="@item.Quantity"></td>
                <td>@item.Book.Price</td>
                <td></td>
                </tr>
            }
            <tr>
                <th colspan="3"><span class="pull-right">Sub Total</span></th>
                <th></th>
            </tr>
            <tr>
                <th colspan="3"><span class="pull-right">VAT 20%</span></th>
                <th></th>
            </tr>
            <tr>
                <th colspan="3"><span class="pull-right">Total</span></th>
                <th></th>
            </tr>
            <tr>
                <td><a href="#" class="btn btn-primary">Continue Shopping</a></td>
                <td colspan="3"><a href="#" class="pull-right btn btn-success">Checkout</a></td>
            </tr>
        </tbody>
    </table>
<div>
    <div class="cart-page">
        <h3>Cart Info</h3>
        <table class="cart-table">
            <tr>
                <th>Action</th>
                <th>Photo</th>
                <th>Title</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
            @{double total = 0;}
            @foreach (var item in ViewBag.cart)
            {
            <tr>
            <td><button><a asp-controller="cart" asp-action="remove" asp-route-id="@item.Book.Id">Remove</a></button></td>
            <td><img src="@item.Book.Photo" width="50"></td>
            <td>@item.Book.Title</td>
            <td>@item.Book.Price</td>
            <td>@item.Quantity</td>
            </tr>
                total += item.Book.Price;
            }
        </table>
        <h2 id="price-total">Total: <b>@total</b></h2>
        <button><a>Go to checkout</a></button>
    </div>
</div>