<div>
    <h3>Cart Info</h3>
    <table>
        <tr>
            <th>Action</th>
            <th>Photo</th>
            <th>Title</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
        @foreach (var item in ViewBag.cart)
        {
        <tr>
        <td><a asp-controller="cart" asp-action="remove" asp-route-id="@item.Book.Id">X</a></td>
        <td><img src="@item.Book.Photo" width="50"></td>
        <td>@item.Book.Title</td>
        <td>@item.Book.Price</td>
        <td>@item.Quantity</td>
        </tr>
        }
    </table>
</div>