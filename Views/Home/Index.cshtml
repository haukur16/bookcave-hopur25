@model List<BookCave.Models.ViewModels.BookListViewModel>
    

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner1.jpg" alt="ASP.NET" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/banner2.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <a class="btn btn-default" asp-controller="Home" asp-action="Details" asp-route-id="1">
                        View book
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner3.jpg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Take a look at our collection of books by David Walliams 
                    <a class="btn btn-default" asp-controller="Home" asp-action="Search" asp-route-titleSearch="" asp-route-authorSearch="Walliams" asp-route-filterGenre="" asp-route-rating="" asp-route-orderBy="Releaseyear" >
                        Here
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner4.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <a class="btn btn-default" asp-controller="Home" asp-action="Search" asp-route-titleSearch="" asp-route-authorSearch="" asp-route-filterGenre="fantasy" asp-route-rating="" asp-route-orderBy="Releaseyear" >
                        Browse the fantasy section
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
    <h3 class="boldText">Popular books</h3>
    </br>
<div id="booksFront">
    @foreach(var book in @Model)
    {
        <div class="index-books">
            <div id="index-cover">
                <a asp-controller="Home" asp-action="Details" asp-route-id="@book.BookId"><img src="@book.Photo"></a>
            </div>
            <div class="index-details">
                <p id="index-book-title" ><a asp-controller="Home" asp-action="Details" asp-route-id="@book.BookId">@book.Title</a></p>
                <p>Author: @book.Author</p>
                <p>Rating: @book.Rating</p>
                <div class="price-and-cart">
                    <p id="index-price">$@book.Price</p>
                    <form asp-controller="cart" asp-action="buy" asp-route-id="@book.BookId">
                        <input id="add-to-cart" type="submit" value="Add to cart">
                    </form>
                </div>
            </div>
        </div>
    }
</div>
<div id="moreBooks">
    <center> <button id="moreBooksButton">More</button></center>
</div>