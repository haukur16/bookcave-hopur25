@model BookCave.Models.ViewModels.OrderViewModel

<div>
  <div>
  <p><b>Full Name:</b> @Model.FirstName @Model.LastName</p>
  <p><b>Street:</b> @Model.StreetName</p>
  <p><b>House number:</b> @Model.HouseNumber</p>
  <p><b>City:</b> @Model.City</p>
  <p><b>Country:</b> @Model.Country</p>
  <p><b>Zip code:</b> @Model.ZIP</p>
    <form asp-controller="Account" asp-action="MyProfile" method="get">
    <input type="submit" value="Edit Info">
  </form>
  <p><hr></p>

  <h3>Order Details</h3>
  @{
    double bookTotal = 0;
  }
  @foreach(var cart in @Model.Carts)
  {
    <p> <b>Title: </b>@cart.Book.Title</p>
    <p> <b>Price:</b> @cart.Book.Price</p>
    <p> <b>Quantity: </b> @cart.Quantity</p>
    bookTotal += (cart.Book.Price * cart.Quantity);
    <hr>
  }
  <h2><b>Total price:</b> @bookTotal</h2>


  <form asp-controller="Account" asp-action="Checkout" method="post">
    <input type="submit" value="Order">
  </form>
</div>